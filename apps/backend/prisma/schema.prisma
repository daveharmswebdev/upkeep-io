// Prisma schema file
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-1.1.x", "linux-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PersonType {
  OWNER
  FAMILY_MEMBER
  VENDOR
  LESSEE
  OCCUPANT
}

enum LeaseStatus {
  ACTIVE
  MONTH_TO_MONTH
  ENDED
  VOIDED
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String     @map("password_hash")
  name         String
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  // Relations
  properties   Property[]
  persons      Person[]
  leases       Lease[]

  @@map("users")
}

model Property {
  id            String    @id @default(uuid())
  userId        String    @map("user_id")
  street        String
  address2      String?
  city          String
  state         String    @db.VarChar(2)
  zipCode       String    @map("zip_code")
  nickname      String?
  purchaseDate  DateTime? @map("purchase_date")
  purchasePrice Decimal?  @map("purchase_price") @db.Decimal(12, 2)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  leases        Lease[]

  @@index([userId])
  @@map("properties")
}

model Person {
  id         String     @id @default(uuid())
  userId     String     @map("user_id")
  personType PersonType @map("person_type")
  firstName  String     @map("first_name") @db.VarChar(100)
  lastName   String     @map("last_name") @db.VarChar(100)
  middleName String?    @map("middle_name") @db.VarChar(50)
  email      String?    @db.VarChar(255)
  phone      String?    @db.VarChar(20)
  notes      String?    @db.Text
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  // Relations
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessees    LeaseLessee[]
  occupants  LeaseOccupant[]

  @@index([userId])
  @@index([personType])
  @@map("persons")
}

model Lease {
  id              String       @id @default(uuid())
  userId          String       @map("user_id")
  propertyId      String       @map("property_id")
  startDate       DateTime     @map("start_date")
  endDate         DateTime?    @map("end_date")
  monthlyRent     Decimal?     @map("monthly_rent") @db.Decimal(10, 2)
  securityDeposit Decimal?     @map("security_deposit") @db.Decimal(10, 2)
  depositPaidDate DateTime?    @map("deposit_paid_date")
  notes           String?      @db.Text
  status          LeaseStatus  @default(ACTIVE)
  voidedReason    String?      @map("voided_reason") @db.Text
  deletedAt       DateTime?    @map("deleted_at")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  // Relations
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  property        Property        @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  lessees         LeaseLessee[]
  occupants       LeaseOccupant[]

  @@index([userId])
  @@index([propertyId])
  @@index([deletedAt])
  @@index([status])
  @@map("leases")
}

model LeaseLessee {
  id         String    @id @default(uuid())
  leaseId    String    @map("lease_id")
  personId   String    @map("person_id")
  signedDate DateTime? @map("signed_date")
  deletedAt  DateTime? @map("deleted_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // Relations
  lease      Lease     @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  person     Person    @relation(fields: [personId], references: [id], onDelete: Restrict)

  @@unique([leaseId, personId])
  @@index([leaseId])
  @@index([personId])
  @@map("lease_lessees")
}

model LeaseOccupant {
  id          String    @id @default(uuid())
  leaseId     String    @map("lease_id")
  personId    String    @map("person_id")
  isAdult     Boolean   @map("is_adult") @default(false)
  moveInDate  DateTime? @map("move_in_date")
  moveOutDate DateTime? @map("move_out_date")
  deletedAt   DateTime? @map("deleted_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  lease       Lease     @relation(fields: [leaseId], references: [id], onDelete: Cascade)
  person      Person    @relation(fields: [personId], references: [id], onDelete: Restrict)

  @@index([leaseId])
  @@index([personId])
  @@map("lease_occupants")
}
